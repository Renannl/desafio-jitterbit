{
  "swagger": "2.0",
  "info": {
    "title": "API de Pedidos",
    "version": "1.0.0",
    "description": "API para gerenciar pedidos com autenticação JWT. Faça login e gere o token automaticamente."
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": ["http"],
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "Token JWT gerado pelo /login, ex.: 'Bearer SEU_TOKEN_AQUI'"
    }
  },
  "paths": {
    "/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Login e obtenção do token JWT",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "username": { "type": "string", "example": "admin" },
                "password": { "type": "string", "example": "1234" }
              },
              "required": ["username", "password"]
            }
          }
        ],
        "responses": {
          "200": { "description": "Retorna token JWT" },
          "400": { "description": "Usuário ou senha incorretos" }
        }
      }
    },
    "/order": {
      "post": {
        "tags": ["Pedidos"],
        "summary": "Cria um novo pedido",
        "security": [{ "Bearer": [] }],
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "pedido",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "numeroPedido": { "type": "string", "example": "PED12345" },
                "valorTotal": { "type": "number", "example": 150.0 },
                "dataCriacao": { "type": "string", "format": "date-time", "example": "2025-12-02T08:00:00Z" },
                "items": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "idItem": { "type": "number", "example": "1" },
                      "quantidadeItem": { "type": "number", "example": 2 },
                      "valorItem": { "type": "number", "example": 75.0 }
                    },
                    "required": ["idItem", "quantidadeItem", "valorItem"]
                  }
                }
              },
              "required": ["numeroPedido", "valorTotal", "dataCriacao", "items"]
            }
          }
        ],
        "responses": {
          "201": { "description": "Pedido criado com sucesso" },
          "400": { "description": "JSON inválido ou campos faltando" },
          "401": { "description": "Token não fornecido" }
        }
      }
    },
    "/order/list": {
      "get": {
        "tags": ["Pedidos"],
        "summary": "Lista todos os pedidos",
        "security": [{ "Bearer": [] }],
        "produces": ["application/json"],
        "responses": {
          "200": { "description": "Lista de pedidos" },
          "401": { "description": "Token não fornecido ou inválido" }
        }
      }
    },
    "/order/{orderId}": {
      "get": {
        "tags": ["Pedidos"],
        "summary": "Obtém detalhes de um pedido pelo ID",
        "security": [{ "Bearer": [] }],
        "parameters": [
          {
            "name": "orderId",
            "in": "path",
            "required": true,
            "type": "string",
            "example": "PED12345"
          }
        ],
        "responses": {
          "200": { "description": "Detalhes do pedido" },
          "401": { "description": "Token não fornecido" },
          "404": { "description": "Pedido não encontrado" }
        }
      },
      "put": {
        "tags": ["Pedidos"],
        "summary": "Atualiza um pedido existente",
        "security": [{ "Bearer": [] }],
        "consumes": ["application/json"],
        "parameters": [
          {
            "name": "orderId",
            "in": "path",
            "required": true,
            "type": "string",
            "example": "PED12345"
          },
          {
            "in": "body",
            "name": "pedido",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "numeroPedido": { "type": "string", "example": "PED12345" },
                "valorTotal": { "type": "number", "example": 150.0 },
                "dataCriacao": { "type": "string", "format": "date-time", "example": "2025-12-02T08:00:00Z" },
                "items": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "idItem": { "type": "number", "example": "1" },
                      "quantidadeItem": { "type": "number", "example": 2 },
                      "valorItem": { "type": "number", "example": 75.0 }
                    },
                    "required": ["idItem", "quantidadeItem", "valorItem"]
                  }
                }
              },
              "required": ["numeroPedido", "valorTotal", "dataCriacao", "items"]
            }
          }
        ],
        "responses": {
          "200": { "description": "Pedido atualizado com sucesso" },
          "400": { "description": "JSON inválido ou campos faltando" },
          "401": { "description": "Token não fornecido" },
          "404": { "description": "Pedido não encontrado" }
        }
      },
      "delete": {
        "tags": ["Pedidos"],
        "summary": "Deleta um pedido pelo ID",
        "security": [{ "Bearer": [] }],
        "parameters": [
          {
            "name": "orderId",
            "in": "path",
            "required": true,
            "type": "string",
            "example": "PED12345"
          }
        ],
        "responses": {
          "200": { "description": "Pedido deletado com sucesso" },
          "401": { "description": "Token não fornecido" },
          "404": { "description": "Pedido não encontrado" }
        }
      }
    }
  }
}
